{
    "compilerOptions": {
        "types": [
            "jest"
        ],
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src",
        "__tests__"
    ]
}